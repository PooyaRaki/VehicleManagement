{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": ["standard-with-typescript", "prettier"],
  "overrides": [],
  "ignorePatterns": ["**/dist/*"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["tsconfig.build.json"]
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-console": "error",
    "@typescript-eslint/no-misused-promises": [
      "error",
      {
        "checksVoidReturn": false
      }
    ]
  }
}
