{
  "name": "vehicle",
  "version": "1.0.0",
  "description": "This is an endpoint to capture vehicles",
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon -r tsconfig-paths/register src/main.ts",
    "test": "jest --coverage --verbose ./src",
    "test:watch": "jest --watchAll",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "swagger": "tsoa spec",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d ./src/utils/config/orm.config.ts",
    "migration:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:create ./src/migrations/$npm_config_name",
    "migration:generate": "npm run typeorm -- migration:generate ./src/migrations/$npm_config_name",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "node ./node_modules/typeorm/cli.js --dataSource dist/utils/config/orm.config.js migration:revert"
  },
  "repository": {
    "type": "git",
    "url": "git+https://pooyaraki@gitlab.com/PooyaRaki/vehiclemanager.git"
  },
  "keywords": [
    "vehicle",
    "vehiclemanager",
    "taskmanager"
  ],
  "author": "PooyaRaki",
  "license": "GPL-3.0",
  "dependencies": {
    "axios": "^1.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "helmet": "^6.0.0",
    "node-cron": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.2",
    "swagger-ui-express": "^4.5.0",
    "tsoa": "^4.1.3",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.3",
    "@types/node-cron": "^3.0.4",
    "@types/sequelize": "^4.28.14",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "babel-jest": "^29.1.2",
    "concurrently": "^7.4.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  }
}
